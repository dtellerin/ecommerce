<!DOCTYPE html>
<html lang="es">

<head>
  <title>Login</title>
<<%- include('./layouts/head') %>

</head>

<body>

  <div class="container my-5">
    <div class="jumbotron">

      <h1 style="color:green;">Registro Nuevo Usuario</h1>
      <br>
      <form id="formRegister" class="form" action="register" method="post" role="form" autoComplete="false">

        <div class="form-group">
          <input id="nombre" name='username' placeholder="Nombre y Apellido" class="form-control" type="text" required>
        </div>

        <div class="form-group">
          <input id="direccion" name='direccion' placeholder="Direccion" class="form-control" type="text" required>
        </div>

        <div class="form-group">
          <input id="telefono" name='telefono' placeholder="Telefono" class="form-control" type="number" required>
        </div>

        <div class="form-group">
          <input id="password" name='password' placeholder="Password" class="form-control" type="password" required>
        </div>

        <div class="form-group">
          <input id="confirmPassword" name='confirmPassword' placeholder="Confirm Password" class="form-control" type="password" required>
        </div>

        <div class="form-group">
          <button class="btn btn-success mt-3 mb-5">Registro</button>
        </div>
      </form>

      <hr>

      <div class="text-left">
        <button class="btn btn-success my-3" onclick="location.href = '/api/sesion/login'" replace>Ir a Login</button>
      </div>

    </div>
  </div>
  <script src="../../js/register.js"></script>
</body>

</html>